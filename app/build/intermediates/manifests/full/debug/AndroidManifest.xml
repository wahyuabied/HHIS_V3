<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrabid.hhis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="com.mrabid.hhis.Helper.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HHIS"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mrabid.hhis.SplashActivity"
            android:label="HHIS"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mrabid.hhis.DetailRiwayatPasienActivity" />
        <activity android:name="com.mrabid.hhis.DetailArtikelActivity" />
        <activity
            android:name="com.mrabid.hhis.MainsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mrabid.hhis.SignInActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.mrabid.hhis.SettingActivity" />
        <activity
            android:name="com.mrabid.hhis.SignUpActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.mrabid.hhis.NextSignUpActivity" />
        <activity android:name="com.mrabid.hhis.Activity.ArtikelActivity" />
        <activity android:name="com.mrabid.hhis.Activity.RiwayatPasienActivity" />
        <activity
            android:name="com.mrabid.hhis.Activity.BeforeMainActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.mrabid.hhis.Activity.DetailDokterActivity" />
        <activity
            android:name="com.mrabid.hhis.GraphActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>