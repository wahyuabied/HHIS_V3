<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/_1sdp"
    android:paddingRight="@dimen/_1sdp"
    android:paddingTop="0.500dp"
    android:paddingBottom="0.500dp"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_pasien"
        android:layout_marginBottom="@dimen/_1sdp"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_13sdp"
            android:background="@color/white"
            android:layout_height="@dimen/_85sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tgl"
                android:text="17 agustus 1986"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dignosa"
                android:textSize="14sp"
                android:text="Diagnosa"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_below="@+id/txt_tgl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_namaDokter"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:text="NamaDokter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_noTelp"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_below="@+id/txt_namaDokter"
                android:text="No_Telp_Dokter"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>