<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    tools:context="com.mrabid.hhis.DetailArtikelActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_MjdlArtikel"
            android:textSize="@dimen/_20sdp"
            android:text="Judul"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_MjdlArtikel"
            android:id="@+id/img_Martikel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_MsinopsisArtikel"
            android:text="ini sinopsis"
            android:layout_below="@+id/img_Martikel"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_MdeskripsiArtikel"
            android:text="ini Artikel"
            android:layout_below="@+id/txt_MsinopsisArtikel"/>



    </RelativeLayout>
</ScrollView>
