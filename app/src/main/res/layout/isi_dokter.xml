<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_isiDokter"
        android:background="@color/dropdown_color"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_20sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dokter Abid"
                android:id="@+id/tv_isiDokter_namaDokter"
                android:textColor="@color/themes"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="081212321231"
                android:id="@+id/tv_isiDokter_telpDokter"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>